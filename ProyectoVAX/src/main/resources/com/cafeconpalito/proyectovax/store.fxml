<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="BackGround" alignment="CENTER" prefHeight="670.0" prefWidth="1125.0" stylesheets="@../../../styles/store.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafeconpalito.controllers.StoreController">
   <children>
      <HBox id="WhiteBackGround" alignment="CENTER_LEFT" fillHeight="false" VBox.vgrow="NEVER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <Label styleClass="labels" text="STORE" textFill="#11598a">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/logovax.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="30.0" right="10.0" />
               </HBox.margin>
            </Label>
            <Label styleClass="filter" text="Name" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </HBox.margin>
               <graphic>
                  <TextField fx:id="nameTextField" onKeyReleased="#nameEntryInfo" styleClass="textfield" />
               </graphic>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label styleClass="filter" text="Genre" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </HBox.margin>
               <graphic>
                  <TextField fx:id="genreTextField" onKeyReleased="#genreEntryInfo" styleClass="textfield" />
               </graphic>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label styleClass="filter" text="Price" textAlignment="CENTER">
               <graphic>
                  <ComboBox fx:id="priceComboBox" prefWidth="150.0" styleClass="textfield" />
               </graphic>
               <HBox.margin>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Button fx:id="insertGameStoreButton" mnemonicParsing="false" onAction="#insertGameStore" styleClass="allGamesBtn" text="+" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      <HBox id="WhiteBackGround" prefHeight="600.0" VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane id="WhiteBackGround" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="533.0" prefWidth="1080.0" HBox.hgrow="ALWAYS">
               <content>
                  <TilePane id="WhiteBackGround" fx:id="MyTilePane" alignment="TOP_CENTER" prefColumns="0" prefRows="0" tileAlignment="TOP_CENTER" />
               </content>
            </ScrollPane>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
